#======================================
  set rng_seed -6
  set NeighSkin 2.0
  set moves 1
  set cycles 10000
  SamplingType Metropolis
#  SamplingType Min

  forcefield testfield.txt

  Create boxes
#    FromFile "NewStyle.clssy"
#    FromFile "Out_0_1.clssy"
    FromFile "Simple.clssy"
#    FromFile "JumboClust.clssy"
  End_Create

  neighlist 1 rsqlist 2

  modify box 1 neighlist 2 RestrictType 1
  modify box 1 neighlist 2 rCut 3.5

  Create moves
#    AtomExchange 1.0
    atomtranslation 1.0
#    DebugDelete 1.0
  End_Create

  Create analysis
    ThermoAverage 1 energy 1
  End_Create

  Create trajectory
    xyz 1 1000 "Traj.xyz"
  End_Create

  Create Constraint 1
    DistanceCriteria  1  1.5d0
  End_Create

  modify box 1 energycalc 1
  modify box 1 temperature 0.8
